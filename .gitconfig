    email = boian4o1@gmail.com
[push]
	default = simple
[format]
	pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%>(20,trunc)%ad %C(auto,green)%<(10  ,trunc)%aN %C(auto,reset)%s%C(auto,red)% gD% D
[log]
	date = format:%Y-%m-%d %H:%M:%S

[core]
	excludesfile = ~/.gitignore
    # not 100% sold but seems nice
    pager = diff-so-fancy | less --tabs=4 -RXS
[color]
	ui = auto

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
